@model Projeto_WEB.Models.ProdutoModel
<div class="row">
    <div class="col-4">
    </div>

    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Produto - Editar</h2>
            </div>
            <div class="card-body">
                <form action="/Produto/SalvarDados" method="post">
                    <label>Id</label>
                    <input readonly name="Id" value="@Model.Id" class="form-control" />
                    <label>Nome</label>
                    <input type="text" name="Nome" value="@Model.Nome" class="form-control />"
                    <br />
                    <label>Quantidade no estoque</label>
                    <input type="text" name="QtdEstoque" value="@Model.QtdEstoque" class="form-control" />
                    <br />
                    <button onclick="myFunction()"><img src="~/MARIO.jpg" width="100" height="100" />
                </form>
            </div>
        </div>

    </div>
    <div class="col-4">
    </div>









