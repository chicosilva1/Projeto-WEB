@model Projeto_WEB.Models.ProdutoModel
<div class="row">
    <div class="col-4">
    </div>

    <div class="col-4">
        <div class= "card">
        <div class="card-header">
            <h2>Cadastro de Produto</h2>
        </div>
        <div class="card-body">
            <form action="/Produto/SalvarDados" method="post">
                <label>Nome</label>
                <input type="text" name="Nome" class="form-control />"
                <br/>
                <label>Quantidade no estoque</label>
                <input type="text" name="QtdEstoque" class="form-control" />
                <br/>
                <select name="CategoriaId" class="form-control">
                    @foreach (var categoria in Model.TodasCategorias)
                    {
                        <option value="@categoria.Id">
                            @categoria.Nome
                        </option>
                    }
                    </select>
                    <button onclick="myFunction()"><img src="~/MARIO.jpg" width="100" height="100"/>

            </form>
        </div>
        </div>
  
    </div>
    <div class="col-4">
    </div>









