@model List<Projeto_WEB.Tabelas.Produtos>
<div class="row">

    <div class="col-12>
">
        <div class="card">    
            <div class="card-header">
                <h2>Lista de Produtos</h2>
            </div>
            <div class="card-body">
                <form action="/Produto/Lista" class="btn btn-success">
                <div class="row">
                    <div class="col-2">
                        <a href="/Produto/Cadastrar" class="btn btn-success">
                            Novo Produto    
                        </a>
                    </div>
                    <div class="col-4">
                        <select name="Filtro" class="form-control">
                            <option value="0">Todas Opções</option>
                            <option value="id">Por código</option>
                            <option value="nome">Por Nome</option>
                            <option value="qtd">Por Qtd</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <input type="text" name="busca" class="form-control"/>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary">
                                Pesquisar
                        </button>
                    </div>
                </div>
                </form>
                <form action="/Produto;Pesquisa" method="get">
                    
                </form>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>Quantidade</th>
                            <th></th>
                        </tr>
                    </thead>
                <tbody>
                       @foreach (var produto in Model)
                       {     
                       <tr>
                                <td>@produto.Id</td>
                                <td>@produto.Descricao</td>
                                <td>@produto.Valor</td>
                                <td>@produto.Categoria.Nome</td>
                                <td>
                                    <a href="/Produto/Editar/@produto.Id"
                                    class="btn btn-warning">
                                    Editar
                                    </a>
                                    <a href="/Produto/Excluir/@produto.Id"
                                    class="btn btn-danger">
                                    Excluir
                                </a>
                                </td>

                            </tr>
                        }
                </thbody>
                </table>
    </div>
        </div>

    <div class="col-3">
    </div>
</div>