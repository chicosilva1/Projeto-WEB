@model List<Projeto_WEB.Tabelas.Categorias>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Ativo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    @if(categoria.Ativo == true)
                    {
                        <input type="checkbox" checked />
                    }
                    else
                        {
                        <input type="checkbox" />
                        }

                        
                </td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>